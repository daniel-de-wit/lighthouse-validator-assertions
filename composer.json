{
    "name": "daniel-de-wit/lighthouse-validator-assertions",
    "type": "library",
    "description": "PHPUnit assertions for validating Lighthouse validators",
    "keywords": [
        "pupunit",
        "lighhouse",
        "validator",
        "assertions",
        "lighthouse-validator-assertions"
    ],
    "homepage": "https://github.com/daniel-de-wit/lighthouse-validator-assertions",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel de Wit",
            "email": "daniel@danieldewit.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "phpunit/phpunit": "^9.0",
        "nuwave/lighthouse": "^5.0.0"
    },
    "require-dev": {
        "daniel-de-wit/php-cs-fixer-rules": "^1.0",
        "nunomaduro/larastan": "^1.0",
        "orchestra/testbench": "^6.3",
        "php-coveralls/php-coveralls": "^2.5",
        "phpstan/phpstan": "^1.2",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-mockery": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "DanielDeWit\\LighthouseValidatorAssertions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DanielDeWit\\LighthouseValidatorAssertions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --no-coverage",
        "coverage": "phpunit",
        "style-check": "vendor/bin/php-cs-fixer fix --diff --verbose --allow-risky=yes --dry-run",
        "style-fix": "vendor/bin/php-cs-fixer fix --diff --verbose --allow-risky=yes",
        "static-check": "vendor/bin/phpstan analyse --memory-limit=2G"
    }
}
